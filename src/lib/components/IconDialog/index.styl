@keyframes move-from-top-of-screen-to-center {
  from {
    top: -100vh
  }
  to {
    top: 50%
  }
}

.lethargic-dialog .dialog-actual-container
  position: absolute
  // overflow-y: scroll
  // width: 500px
  // height: 500px
  top: 50%
  left: 50%
  // bottom 0
  transform: translate(-50%, -50%)
  animation: move-from-top-of-screen-to-center 0.75s 1

.lethargic-dialog .dialog-actual
  padding: 0.75rem
  border-radius: 2.5px
  position: relative;
  min-width: 50vw;
  background-color: #f1f2f6;
  background-image: linear-gradient(315deg, #eee 0%, #fff 100%);
  font-family: Helvetica
  background-color: silver
  border-radius: 3px;
  box-shadow: 0px 1px 4px -2px #333;
  // text-shadow: 0px 1px #333;

  .window-buttons-row
    margin-top: 0.5rem
    padding-right 1rem
    justify-content: flex-end
    font-size: 1.5rem
    cursor: crosshair
    cursor: pointer

  .close-btn
    color: #222
    magin-left auto

  &:after
    content: ''
    position: absolute
    top: 2px
    left: 2px
    width: calc(100% - 4px)
    height: 50%
    background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.1));
  // height 100vh
  // width 100vw

  .title
    position relative
    font-size 1.74rem

  .main-row
    // align-items: center
  // Note that both are child elements of dialog-row
  .image
    // color: royalblue
    font-size: 129px
    padding: 1rem
    display flex
    // flex-direction column
    align-items: center
    // flex: 1 1 30%
    position: relative

  
  .dialog-content
    flex: 1 1 70%
    // display: flex
    // flex-direction: column
    // justify-content: center
    // height: 200px
    padding: 1rem
    // min-height: 100%

  .text-content
    position relative
    top -2rem
    word-spacing: 2px
    line-height: 1.47

  .btn-row
    padding-right 1rem
    justify-content: flex-end
    flex-wrap: wrap
    margin-bottom 1rem
    button
      margin-left: 0.5rem



@media (max-width 640px), (max-height: 400px)
  .lethargic-dialog .dialog-actual
    height: 100vh
    width: 100vw
    overflow-y scroll
